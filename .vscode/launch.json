    "version": "0.2.0",
    "configurations": [
      {
        "type": "firefox",
        "name": "Firefox",
        "request": "launch",
        "url": "https://local.asf.alaska.edu:4200/",
        "webRoot": "${workspaceFolder}",
        "skipFiles": [
          "**/node_modules/**/*"
        ]
      },
      {
        "type": "chrome",
        "name": "Chrome",
        "request": "launch",
        "url": "https://local.asf.alaska.edu:4200/",
        "webRoot": "${workspaceFolder}",
        "skipFiles": [
          "**/node_modules/**/*"
        ]
      },
      {
        "name": "Microsoft Edge",
        "request": "launch",
        "type": "vscode-edge-devtools.debug",
        "url": "https://local.asf.alaska.edu:4200/",
        "skipFiles": [
          "**/node_modules/**/*"
        ]
        // "url": "" // Provide your project's url to finish configuring
      }
    ]
}
